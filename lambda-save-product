'use strict';

var AWS = require('aws-sdk'),
	uuid = require('uuid'),
	dynamoClient = new AWS.DynamoDB.DocumentClient();

exports.saveProduct = function (event, context, callback) {
	
	var params = {
		Item: {
			"id": uuid.v1(),
			"nome": event.nome,
			"valor": event.valor
		},
		TableName: process.env.TABLE_NAME
	};

	dynamoClient.put(params, function (err, data) {
		callback(err, data);
	});

}
